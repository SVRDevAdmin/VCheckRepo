                <StackPanel Grid.Row="1" Orientation="Horizontal">
                    <Button Content="Previous" VerticalAlignment="Top" Click="PreviousUserList_Click"></Button>
                    <TextBlock Name="Page" Width="40" VerticalAlignment="Center" HorizontalAlignment="Center" Text="1" Margin="10,0,10,0" TextBlock.TextAlignment="Center"/>
                    <Button Content="Next" VerticalAlignment="Top" Click="NextUserList_Click"></Button>
                </StackPanel>
            </Grid>
        </Border>
        
    </Grid>
</Page>
