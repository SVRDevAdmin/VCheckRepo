<Page x:Class="VCheckViewer.Views.Pages.Test.LocalizationTestPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VCheckViewer.Views.Pages.Test"
      xmlns:cc="clr-namespace:VCheckViewer.Properties"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LocalizationTestPage">

    <Grid>
        <Label x:Name="lbTitle" Content="{Binding Path=Test_Label_1, Source={StaticResource Resources}}" />

        <Button x:Name="btnZh" Click="btnZh_Click" Margin="0, 0, 20, 0">Chinese</Button>
        <Button x:Name="btnEn" Click="btnEn_Click" Margin="100, 0, 0, 0">English</Button>

        <Button x:Name="btnSendEmail" Click="btnSendEmail_Click" Margin="190, 0, 0, 0">Send Email</Button>
    </Grid>
</Page>
