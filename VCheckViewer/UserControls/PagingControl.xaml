<UserControl x:Class="VCheckViewer.UserControls.PagingControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VCheckViewer.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel x:Name="paginationPanel" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Name="btnPrev" Content="{Binding Path=General_Label_Prev, Source={StaticResource Resources}}" Tag="Prev" BorderThickness="0" FontWeight="Bold" Click="btnPrev_Click">
            </Button>
            <StackPanel x:Name="numberingSection" Orientation="Horizontal">
                
            </StackPanel>
            <Button Name="btnNext" Content="{Binding Path=General_Label_Next, Source={StaticResource Resources}}" Tag="Next" BorderThickness="0" FontWeight="Bold" Foreground="DarkOrange" Click="btnNext_Click">
            </Button>
        </StackPanel>
    </Grid>
</UserControl>
